{
  "require": {
    "chasegiunta/scss": "1.0.0",
    "craftcms/cms": "3.5.12.1",
    "craftcms/redactor": "2.8.1",
    "doublesecretagency/craft-bootstrap": "4.1.3.1",
    "swdevelopment/animate": "1.0.2",
    "utakka/redactor-anchors": "1.1.0",
    "vlucas/phpdotenv": "^3.4.0"
  },
  "require-dev": {
    "yiisoft/yii2-shell": "^2.0.3"
  },
  "autoload": {
    "psr-4": {
      "modules\\": "modules/"
    }
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true,
    "platform": {
      "php": "7.0"
    }
  },
  "scripts": {
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ]
  }
}
